<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="backend.dashboard.test.dao.ProjectAndRoundDao">

	<resultMap id="BaseResultMap" type="ProjectAndRound">
		<id property="id" column="id"/>
		<result property="parent_id"  column="parent_id"/>
		<result property="name" column="name"  />
		<result property="type" column="type"  />
		<result property="testCaseList"  column="testCaseList"/>
		<result property="checked" column="checked"/>
		<result property="url" column="url" />
		<result property="icon" column="icon" />
	</resultMap>

	<select id="getChildrenByPid" parameterType="String" resultMap="BaseResultMap">
		SELECT * FROM itms_project_round WHERE parent_id = #{value}
	</select>
	
	<select id="getRoot" parameterType="String" resultMap="BaseResultMap">
		SELECT * FROM itms_project_round WHERE parent_id = 0
	</select>
	
	<select id="save" parameterType="ProjectAndRound">
		INSERT INTO
		itms_project_round(parent_id,name,type,testCaseList,checked,url,icon)
		VALUES(#{parent_id},#{name},#{type},#{testCaseList},#{checked},#{url},#{icon})
	</select>
	
	<select id="findAll" resultMap="BaseResultMap">
		SELECT * FROM itms_project_round
	</select>

	<select id="findById" parameterType="int" resultMap="BaseResultMap">
	select * from itms_project_round where id = #{value};
	</select>
	
	<update id="update" parameterType="ProjectAndRound">
		UPDATE itms_project_round SET name = #{name} WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM itms_project_round WHERE id=#{value}
	</delete>
	
	<delete id="deleteByParentId" parameterType="int">
		DELETE FROM itms_project_round WHERE parent_id=#{value}
	</delete>
</mapper>